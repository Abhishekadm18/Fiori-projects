<mvc:View xmlns:table="sap.ui.table" controllerName="project18.controller.local2"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" showNavButton="true" navButtonPress=".onNavBack">
        <content>
             <Table id="_IDGenTable1" items="{main>/Customers}" mode="MultiSelect"  >
                <headerToolbar>
                        <OverflowToolbar id="otbSubheader">
                            <Title id="_IDGenTitle1" text="Customer Details" level="H2"/>
                            <ToolbarSpacer id="_IDGenToolbarSpacer1"/>                           
                        </OverflowToolbar>
                    </headerToolbar>
                <columns>
                    <Column id="_IDGenColumn1">
                        <Text id="_IDGenText1" text="Customer ID"/>
                            <!-- <footer>
                                <Text id="_IDGenText2"  text="Customer ID"/>
                            </footer> -->
                    </Column>
                        <Column id="_IDGenColumn2">
                            <Text id="_IDGenText2" text="CompanyName"/>
                            
                        </Column>
                            <Column id="_IDGenColumn3">
                                <Text id="_IDGenText3" text="ContactName"/>
                            
                            </Column>
                                <Column id="_IDGenColumn4">
                                    <Text id="_IDGenText4" text="ContactTitle"/>
                            
                                </Column>
                                    <Column id="_IDGenColumn5" >
                                        <Text id="_IDGenText9"  text="Address"/>
                                    </Column>
                                        <Column id="_IDGenColumn6"  >
                                            <Text id="_IDGenText11"   text="City"/>
                                        </Column>
                                            <!-- <Column id="_IDGenColumn7"  >
                                                 <Text id="_IDGenText12"   text="Region"/>
                                            </Column> -->
                                                <Column id="_IDGenColumn8"  >
                                                    <Text id="_IDGenText13"  text="PostalCode"/>
                                                </Column>
                                                    <Column id="_IDGenColumn9"  >
                                                        <Text id="_IDGenText14"  text="Country"/>
                                                    
                                                    </Column>
                                                        <Column id="_IDGenColumn10"  >
                                                            <Text id="_IDGenText15"   text="Phone"/>
                                                        </Column>
                                                            <Column id="_IDGenColumn11"  >
                                                                <Text id="_IDGenText16"  text="Fax"/>
                                                            </Column>

                </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem1" type="Active" press=".onNavToDetails" >
                            <cells>
                                <Text id="_IDGenText5" text="{main>CustomerID}"/>
                                <Text id="_IDGenText6" text="{main>CompanyName}"/>
                                <Text id="_IDGenText7" text="{main>ContactName}"/>
                                <Text id="_IDGenText8" text="{main>ContactTitle}"/>
                                <Text id="_IDGenText10"  text="{main>Address}"/>
                                <Text id="_IDGenText17"  text="{main>City}"/>
                                <!-- <Text id="_IDGenText18"   text="{main>Region}"/> -->
                                <Text id="_IDGenText19"   text="{main>PostalCode}"/>
                                <Text id="_IDGenText20"   text="{main>Country}"/>
                                <Text id="_IDGenText21"   text="{main>Phone}"/>
                                <Text id="_IDGenText22"   text="{main>Fax}"/>
                                
                            </cells>
                        </ColumnListItem>
                    </items>

            </Table> 

        </content>
    </Page>
</mvc:View> 
 